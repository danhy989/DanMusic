<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="panelTrack" onMouseClicked="#selectTrackOnPlaylist" style="-fx-border-style: hidden hidden dashed hidden; -fx-border-width: 0.3;" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="52.0">
            <children>
                <Label fx:id="trackNumOrder" text="1.">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="300.0">
            <children>
            <ImageView fx:id="imageView" fitHeight="49.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </ImageView>
                <Label fx:id="trackName" text="The Weekend - Real Life">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="62.0" prefWidth="145.0" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="trackTotalDuration" text="03:30" textFill="#948383">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </children>
</fx:root>
